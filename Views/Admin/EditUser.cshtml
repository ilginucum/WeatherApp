@model Weather_App.Models.UserRegistration

@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Username" />
    
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="UserType"></label>
        <select asp-for="UserType" class="form-control">
            <option value="LastUserType">LastUserType</option>
            <option value="Admin">Admin</option>
        </select>
        <span asp-validation-for="UserType" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="DefaultCity"></label>
        <input asp-for="DefaultCity" class="form-control" />
        <span asp-validation-for="DefaultCity" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option value="activated">Activated</option>
            <option value="deactivated">Deactivated</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}