@model IEnumerable<Weather_App.Models.UserRegistration>
@{
    ViewData["Title"] = "Manage Users";
}

<h2 class="mb-4">Manage Users</h2>

<form asp-action="ManageUsers" method="get" class="mb-4">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <input name="usernameFilter" class="form-control form-control-sm" style="width: 150px;" placeholder="Username" value="@ViewBag.UsernameFilter" />
        </div>
        <div class="col-auto">
            <input name="nameFilter" class="form-control form-control-sm" style="width: 150px;" placeholder="Name" value="@ViewBag.NameFilter" />
        </div>
        <div class="col-auto">
            <input name="defaultCityFilter" class="form-control form-control-sm" style="width: 150px;" placeholder="Default City" value="@ViewBag.DefaultCityFilter" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary btn-sm">Filter</button>
        </div>
        <div class="col-auto">
            <a asp-action="ManageUsers" class="btn btn-secondary btn-sm ms-2">Display All</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Name</th>
            <th>User Type</th>
            <th>Default City</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>@user.UserType</td>
                <td>@user.DefaultCity</td>
                <td>@user.Status</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Username" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="DeleteUser" asp-route-id="@user.Username" method="post" style="display:inline;">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="AddUser" class="btn btn-success">Add New User</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}