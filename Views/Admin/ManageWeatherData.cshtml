@model IEnumerable<Weather_App.Models.WeatherForecast>

<h2>Manage Weather Data</h2>

<p>
    <a asp-action="AddWeatherData" class="btn btn-primary">Add New Weather Data</a>
</p>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>City</th>
                <th>Temperature</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.CityName</td>
                    <td>@item.TemperatureÂ°C</td>
                    <td>@item.MainStatus</td>
                    <td>
                        <form asp-action="DeleteWeatherData" method="post" onsubmit="return confirm('Are you sure you want to delete this weather data?');">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No weather data available.</p>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}