@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Manage Users</h5>
                <p class="card-text">Add, view, edit, or delete user accounts.</p>
                <a asp-action="ManageUsers" class="btn btn-primary">Go to User Management</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Manage Weather Data</h5>
                <p class="card-text">Add, view, edit, or delete weather forecast data.</p>
                <a asp-action="ManageWeatherData" class="btn btn-primary">Go to Weather Data Management</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add New User</h5>
                <p class="card-text">Create a new user account.</p>
                <a asp-action="AddUser" class="btn btn-success">Add User</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add New Weather Data</h5>
                <p class="card-text">Enter new weather forecast information.</p>
                <a asp-action="AddWeatherData" class="btn btn-success">Add Weather Data</a>
            </div>
        </div>
    </div>
</div>